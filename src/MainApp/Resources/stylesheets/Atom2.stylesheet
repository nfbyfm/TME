* {
	background: qlineargradient(spread:pad, x0:1, y0:1, x1:2, y0:2, stop:0 rgba(153, 211, 194, 255), stop:1 rgba(174, 204, 159, 255));
	color: #f0e5d1;
}

QMenuBar{
	background: #574b4f;
}

QDockWidget {
	background: rgb(129, 129, 129);
}

QTextEdit{
	background: #ffffff;
	color: #000000;
	border: 1px solid #679cc8;
}

QTreeView {
	background: #ffffff;
	color: #000000;
}

QLineEdit {
	background: #ffffff;
	color: #000000;
}

QTableWidget{
	background: #ffffff;
}


QGroupBox{
	/*background: #ffffff;*/
	color: #000000;
}

QWidget::item:selected {
	background: #fbd05d;
	color: #353537;
}

/*
