/* Style the tab using the tab sub-control. Note that it reads QTabBar _not_ QTabWidget */
QTabBar::tab {
	background: #dea033;
	border: 1px solid #4d4e52;
	margin : 2px;
}



QTabBar::tab:!selected {
	/*margin-top: 2px; */
	background: #d46e2c;
}


QStatusBar{
	background: #9b1d0d;
	color: #ffffff;
}
